{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "noLib": false,
    "paths": {
      "components": ["/packages/components"]
    },
    "removeComments": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "jest-plugin-context", "node", "sinon-chai"]
  },
  "exclude": ["node_modules", "**/*.test.*"]
}
